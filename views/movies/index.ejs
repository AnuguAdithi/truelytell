<% layout('layouts/boilerplate')%>

<h1>
	All movies
</h1>

<a href="/movies/new/<%=community._id%>" type="button" class="btn btn-warning">new Movie</a>



<% for(let movie of community.moviePosts){%>
<div class="card" mb-3>
	<div class="row">
		<div class="col-md-4">
			<img class="img-fluid" src='<%=movie.image%>' alt=image>
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title">
					<%=movie.name %>
				</h5>
				<p class="card-text">
					<%=movie.review%>
				</p>
				<a class="btn btn-primary" href="/movies/post/<%=movie._id%>/<%=community._id%>" >View <%=movie.name %></a>
				
			</div>
			
		</div>
	</div>
</div>
<%}%>
	
